<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#e7dfc2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/restart"
            android:onClick="restart">
        </ImageButton>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </View>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/exit"
            android:onClick="exit"></ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivNewHighest"
            android:visibility="gone" >
            <!--android:background="@drawable/new_highest" -->

        </ImageView>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Points: "
                    android:textSize="24sp">
                </TextView>
                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="50sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:fontFamily="@font/kenney_blocks"></TextView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highest: "
                    android:textSize="24sp"
                    android:gravity="center|left">
                </TextView>
                <TextView
                    android:id="@+id/tvHighest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="24sp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:fontFamily="@font/kenney_blocks"></TextView>
            </TableRow>

        </TableLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="80dp"></View>

        <Button
            android:id="@+id/history"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:onClick="openScoreView"
            android:backgroundTint="#bb8044"
            android:fontFamily="@font/amatic"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:text="HISTORY" />



    </LinearLayout>

</LinearLayout>
